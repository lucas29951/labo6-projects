<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/status_bar"
            android:layout_width="8dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:background="@color/mesa_libre"/> <!-- Green for abierto -->

        <TextView
            android:id="@+id/text_mesa_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintStart_toEndOf="@id/status_bar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mesa 12" />

        <TextView
            android:id="@+id/text_pedido_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_mesa_numero"
            app:layout_constraintTop_toBottomOf="@id/text_mesa_numero"
            tools:text="4 Items - $54.50" />

        <TextView
            android:id="@+id/text_pedido_tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintStart_toStartOf="@id/text_pedido_info"
            app:layout_constraintTop_toBottomOf="@id/text_pedido_info"
            tools:text="Hace 5 min" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete_red"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@id/status_bar"
            app:layout_constraintTop_toBottomOf="@id/text_pedido_tiempo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Eliminar Pedido"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_accion_1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_accion_2"
            app:layout_constraintStart_toEndOf="@id/button_delete"
            app:layout_constraintTop_toBottomOf="@id/text_pedido_tiempo"
            tools:text="Editar Pedido" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_accion_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/button_accion_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_accion_1"
            app:layout_constraintTop_toTopOf="@id/button_accion_1"
            tools:text="Enviar a Cocina" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>